@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-4">

                    <div class="text-center mb-4">
                        <h3 class="mb-1">@ViewData["Title"]</h3>
                        <p class="text-muted small">Создайте новый аккаунт</p>
                    </div>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly"
                             class="alert alert-danger py-2 small"
                             role="alert"></div>

                        <!-- Выбор роли -->
                        <div class="mb-4">
                            <label class="form-label small fw-bold text-muted mb-3">
                                Выберите роль
                            </label>

                            <div class="row g-3">
                                <div class="col-6">

                                    <input type="radio"
                                           asp-for="Input.UserRole"
                                           id="roleEmployee"
                                           value="employee"
                                           class="role-radio" />

                                    <label for="roleEmployee"
                                           class="btn btn-outline-primary w-100 py-3 role-btn">
                                        <i class="bi bi-person-workspace d-block fs-1 mb-2"></i>
                                        <span class="fw-bold">Я соискатель</span>
                                    </label>
                                </div>

                                <div class="col-6">

                                    <input type="radio"
                                           asp-for="Input.UserRole"
                                           id="roleEmployer"
                                           value="employer"
                                           class="role-radio" />

                                    <label for="roleEmployer"
                                           class="btn btn-outline-primary w-100 py-3 role-btn">
                                        <i class="bi bi-building d-block fs-1 mb-2"></i>
                                        <span class="fw-bold">Я работодатель</span>
                                    </label>
                                </div>
                            </div>

                            <span asp-validation-for="Input.UserRole"
                                  class="text-danger small"></span>
                        </div>

                        <!-- Email -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email"
                                   class="form-control"
                                   autocomplete="username"
                                   placeholder="name@example.com" />
                            <label asp-for="Input.Email"></label>
                            <span asp-validation-for="Input.Email"
                                  class="text-danger small"></span>
                        </div>

                        <!-- Пароль -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password"
                                   class="form-control"
                                   autocomplete="new-password"
                                   placeholder="password" />
                            <label asp-for="Input.Password"></label>
                            <span asp-validation-for="Input.Password"
                                  class="text-danger small"></span>
                        </div>

                        <!-- Подтверждение пароля -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword"
                                   class="form-control"
                                   autocomplete="new-password"
                                   placeholder="password" />
                            <label asp-for="Input.ConfirmPassword"></label>
                            <span asp-validation-for="Input.ConfirmPassword"
                                  class="text-danger small"></span>
                        </div>

                        <!-- Согласие -->
                        <div class="form-check mb-3">
                            <input class="form-check-input"
                                   type="checkbox"
                                   id="agreeTerms"
                                   required />
                            <label class="form-check-label small"
                                   for="agreeTerms">
                                Я соглашаюсь с
                                <a href="#" class="text-decoration-none">условиями использования</a>
                                и
                                <a href="#" class="text-decoration-none">политикой конфиденциальности</a>
                            </label>
                        </div>

                        <!-- Кнопка -->
                        <div class="d-grid mb-3">
                            <button id="registerSubmit"
                                    type="submit"
                                    class="btn btn-primary py-2">
                                Зарегистрироваться
                            </button>
                        </div>

                        <!-- Ссылка вход -->
                        <div class="text-center small">
                            <span class="text-muted">Уже есть аккаунт?</span>
                            <a asp-page="./Login"
                                   asp-route-returnUrl="@Model.ReturnUrl"
                                   class="text-decoration-none">
                                Войти
                            </a>
                        </div>
                    </form>

                    <!-- Внешние провайдеры -->
                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <div class="text-center mt-4">
                            <div class="d-flex align-items-center mb-3">
                                <hr class="flex-grow-1" />
                                <span class="text-muted small mx-2">или</span>
                                <hr class="flex-grow-1" />
                            </div>

                            <form id="external-account"
                                  asp-page="./ExternalLogin"
                                  asp-route-returnUrl="@Model.ReturnUrl"
                                  method="post">

                                <div class="d-flex justify-content-center gap-2 flex-wrap">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit"
                                                class="btn btn-outline-secondary btn-sm"
                                                name="provider"
                                                value="@provider.Name"
                                                title="Зарегистрироваться через @provider.DisplayName">
                                            <i class="bi bi-@provider.Name.ToLower()"></i>
                                            @provider.DisplayName
                                        </button>
                                    }
                                </div>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="text-center mt-4">
                            <div class="alert alert-info py-2 small mb-0">
                                <i class="bi bi-info-circle me-1"></i>
                                Внешние сервисы регистрации не настроены
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* скрываем radio */
    .role-radio {
        display: none;
    }


</style> 

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById('registerForm')
            .addEventListener('submit', function (e) {
                if (!document.getElementById('agreeTerms').checked) {
                    e.preventDefault();
                    alert('Пожалуйста, примите условия использования и политику конфиденциальности');
                }
            });
    </script>
}