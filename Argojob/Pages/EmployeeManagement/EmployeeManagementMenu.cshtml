@page
@model Agrojob.Pages.EmployeeManagement.EmployeeManagementMenuModel
@{
    ViewData["Title"] = "Панель соискателя";
    
    // Определяем цвета для статусов
    var statusColors = new Dictionary<string, (string bg, string text)>
    {
        ["pending"] = (bg: "rgba(255, 143, 0, 0.1)", text: "#FF8F00"),
        ["viewed"] = (bg: "rgba(23, 162, 184, 0.1)", text: "#17a2b8"),
        ["invited"] = (bg: "rgba(46, 125, 50, 0.1)", text: "#2E7D32"),
        ["accepted"] = (bg: "rgba(27, 94, 32, 0.1)", text: "#1B5E20"),
        ["rejected"] = (bg: "rgba(220, 53, 69, 0.1)", text: "#dc3545"),
        ["withdrawn"] = (bg: "rgba(107, 114, 128, 0.1)", text: "#6B7280"),
    };
}

<!-- Хлебные крошки -->
<div class="bg-light py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a asp-page="/Index" style="color: #2E7D32;">Главная</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page" style="color: #6B7280;">
                    Панель соискателя
                </li>
            </ol>
        </nav>
    </div>
</div>

<!-- Заголовок -->
<section class="py-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="section-title mb-1" style="font-size: 1.8rem;">Панель соискателя</h1>
                <p style="color: #6B7280;">Управляйте резюме и отслеживайте отклики</p>
            </div>
            <div>
                <span class="badge py-2 px-3 rounded-pill" style="background-color: #2E7D32; color: #FFFFFF;">
                    <i class="bi bi-person-circle me-1"></i>
                    @(User.Identity?.Name ?? "Пользователь")
                </span>
            </div>
        </div>

        <!-- Блок резюме -->
        <div class="card shadow-sm border-0 rounded-4 mb-4" style="border: 1px solid #E0E8E0 !important;">
            <div class="card-header bg-transparent border-0 pt-4 px-4">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0" style="color: #1C2E1C;">
                        <i class="bi bi-file-person me-2" style="color: #2E7D32;"></i>
                        Мои резюме
                        @if (Model.Resumes.Any())
                        {
                            <span class="ms-2 small" style="color: #6B7280;">(@Model.Resumes.Count)</span>
                        }
                    </h5>
                    <a asp-page="/ResumeManagement/ResumeEdit"
                           class="btn btn-primary btn-sm rounded-pill px-3"
                           style="background-color: #2E7D32; border-color: #2E7D32;">
                        <i class="bi bi-plus-circle me-1"></i> Создать резюме
                    </a>
                </div>
            </div>
            <div class="card-body p-4 pt-2">
                @if (Model.Resumes.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead style="background-color: #F5F9F5;">
                                <tr>
                                    <th class="fw-semibold" style="color: #1C2E1C;">Название</th>
                                    <th class="fw-semibold" style="color: #1C2E1C;">Специализация</th>
                                    <th class="fw-semibold" style="color: #1C2E1C;">Опыт</th>
                                    <th class="fw-semibold" style="color: #1C2E1C;">Желаемая зарплата</th>
                                    <th class="fw-semibold" style="color: #1C2E1C;">Статус</th>
                                    <th class="fw-semibold" style="color: #1C2E1C;">Обновлено</th>
                                    <th class="fw-semibold" style="color: #1C2E1C;">Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var resume in Model.Resumes)
                                {
                                    <tr>
                                        <td class="fw-semibold" style="color: #1C2E1C;">@resume.Title</td>
                                        <td style="color: #6B7280;">@resume.Specialization</td>
                                        <td style="color: #6B7280;">@resume.Experience лет</td>
                                        <td class="fw-bold" style="color: #1B5E20;">@resume.DesiredSalary</td>
                                        <td>
                                            @if (resume.IsActive && resume.IsPublished)
                                            {
                                                <span class="badge" style="background-color: rgba(46, 125, 50, 0.1); color: #2E7D32;">
                                                    <i class="bi bi-check-circle-fill me-1" style="font-size: 0.7rem;"></i>
                                                    Активно
                                                </span>
                                            }
                                            else if (!resume.IsPublished)
                                            {
                                                <span class="badge" style="background-color: #F3F6F3; color: #6B7280;">
                                                    <i class="bi bi-pencil me-1" style="font-size: 0.7rem;"></i>
                                                    Черновик
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge" style="background-color: #F3F6F3; color: #6B7280;">
                                                    <i class="bi bi-pause-circle me-1" style="font-size: 0.7rem;"></i>
                                                    Не активно
                                                </span>
                                            }
                                        </td>
                                        <td style="color: #6B7280;">@resume.UpdatedAt.ToString("dd.MM.yyyy")</td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-page="/ResumeManagement/ResumeEdit"
                                                       asp-route-id="@resume.Id"
                                                       class="btn btn-outline-primary"
                                                       title="Редактировать"
                                                       style="border-color: #2E7D32; color: #2E7D32;">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-page="/ResumeManagement/ResumeDetail"
                                                       asp-route-id="@resume.Id"
                                                       class="btn btn-outline-primary"
                                                       title="Просмотр"
                                                       style="border-color: #2E7D32; color: #2E7D32;">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <button type="button"
                                                        class="btn btn-outline-danger"
                                                        title="Удалить"
                                                        onclick="confirmDelete(@resume.Id)"
                                                        style="border-color: #dc3545; color: #dc3545;">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="mb-3">
                            <i class="bi bi-file-person fs-1" style="color: #6B7280; opacity: 0.5;"></i>
                        </div>
                        <h6 class="fw-semibold" style="color: #1C2E1C;">У вас пока нет резюме</h6>
                        <p class="small mb-3" style="color: #6B7280;">Создайте первое резюме, чтобы начать поиск работы</p>
                        <a asp-page="/ResumeManagement/ResumeEdit"
                               class="btn btn-primary btn-sm px-4"
                               style="background-color: #2E7D32; border-color: #2E7D32;">
                            <i class="bi bi-plus-circle me-1"></i> Создать резюме
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Блок недавних откликов -->
        <div class="card shadow-sm border-0 rounded-4 mb-4" style="border: 1px solid #E0E8E0 !important;">
            <div class="card-header bg-transparent border-0 pt-4 px-4">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0" style="color: #1C2E1C;">
                        <i class="bi bi-clock-history me-2" style="color: #FF8F00;"></i>
                        Недавние отклики
                        @if (Model.RecentApplications.Any())
                        {
                            <span class="ms-2 small" style="color: #6B7280;">(@Model.RecentApplications.Count)</span>
                        }
                    </h5>
                    <a asp-page="/EmployeeManagement/ApplicationManagement/MyApplications"
                           class="btn btn-outline-primary btn-sm rounded-pill px-3"
                           style="border-color: #2E7D32; color: #2E7D32;">
                        Все отклики <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
            <div class="card-body p-4 pt-2">
                @if (Model.RecentApplications.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var app in Model.RecentApplications)
                        {
                            var colors = statusColors.ContainsKey(app.StatusCode)
                                ? statusColors[app.StatusCode]
                                : (bg: "rgba(107, 114, 128, 0.1)", text: "#6B7280");
                            
                            <a asp-page="/EmployeeManagement/ApplicationManagement/MyApplications"
                                   class="list-group-item list-group-item-action border-0 px-0"
                                   style="border-bottom: 1px solid #E0E8E0 !important;">
                                <div class="row align-items-center">
                                    <div class="col-md-5">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle p-2 me-3" style="background-color: rgba(46, 125, 50, 0.1);">
                                                <i class="bi bi-briefcase fs-5" style="color: #2E7D32;"></i>
                                            </div>
                                            <div>
                                                <span class="fw-semibold" style="color: #1C2E1C;">@app.VacancyTitle</span>
                                                <br>
                                                <small style="color: #6B7280;">@app.CompanyName</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <span class="badge" style="background-color: @colors.bg; color: @colors.text;">
                                            @app.Status
                                        </span>
                                    </div>
                                    <div class="col-md-2">
                                        <span class="small" style="color: #6B7280;">
                                            <i class="bi bi-clock me-1"></i>@app.AppliedDate.ToString("dd.MM.yyyy")
                                        </span>
                                    </div>
                                    <div class="col-md-2 text-end">
                                        <span style="color: #2E7D32;">@app.Salary</span>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                    
                    @if (Model.TotalApplicationsCount > 5)
                    {
                        <div class="text-center mt-3">
                            <a asp-page="/EmployeeManagement/ApplicationManagement/MyApplications"
                                   class="btn btn-link text-decoration-none small"
                                   style="color: #2E7D32;">
                                Показать все @Model.TotalApplicationsCount откликов <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-4">
                        <div class="mb-2">
                            <i class="bi bi-inbox fs-1" style="color: #6B7280; opacity: 0.5;"></i>
                        </div>
                        <p style="color: #6B7280;">У вас пока нет откликов</p>
                        <a asp-page="/Vacancies"
                               class="btn btn-outline-primary btn-sm"
                               style="border-color: #2E7D32; color: #2E7D32;">
                            <i class="bi bi-search me-1"></i> Найти вакансии
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Блок обучения (заглушка) -->
        <div class="card shadow-sm border-0 rounded-4" style="border: 1px solid #E0E8E0 !important;">
            <div class="card-header bg-transparent border-0 pt-4 px-4">
                <h5 class="fw-bold mb-0" style="color: #1C2E1C;">
                    <i class="bi bi-mortarboard me-2" style="color: #FF6B35;"></i>
                    Обучение и карьера
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="d-flex align-items-center p-3 rounded-3" style="background-color: #F5F9F5;">
                            <i class="bi bi-file-text fs-2 me-3" style="color: #2E7D32;"></i>
                            <div>
                                <h6 class="fw-semibold mb-1" style="color: #1C2E1C;">Как составить резюме</h6>
                                <small style="color: #6B7280;">Практическое руководство</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex align-items-center p-3 rounded-3" style="background-color: #F5F9F5;">
                            <i class="bi bi-chat-dots fs-2 me-3" style="color: #FF8F00;"></i>
                            <div>
                                <h6 class="fw-semibold mb-1" style="color: #1C2E1C;">Подготовка к собеседованию</h6>
                                <small style="color: #6B7280;">Советы и вопросы</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex align-items-center p-3 rounded-3" style="background-color: #F5F9F5;">
                            <i class="bi bi-graph-up fs-2 me-3" style="color: #FF6B35;"></i>
                            <div>
                                <h6 class="fw-semibold mb-1" style="color: #1C2E1C;">Карьера в АПК</h6>
                                <small style="color: #6B7280;">Перспективные направления</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-center mt-3">
                    <a href="#" class="btn btn-link text-decoration-none small" style="color: #2E7D32;">
                        Все материалы <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Форма удаления (скрытая) -->
<form id="deleteForm" method="post" asp-page-handler="DeleteResume" style="display:none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="resumeId" id="deleteResumeId" />
</form>

@section Scripts {
    <script>
        function confirmDelete(resumeId) {
            if (confirm('Вы уверены, что хотите удалить это резюме?')) {
                document.getElementById('deleteResumeId').value = resumeId;
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
}