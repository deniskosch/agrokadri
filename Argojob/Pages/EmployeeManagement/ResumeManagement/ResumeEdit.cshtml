@page "{id?}"
@model Agrojob.Pages.EmployeeManagement.ResumeManagement.ResumeEditModel
@{
    ViewData["Title"] = Model.IsEditMode ? "Редактирование резюме" : "Создание резюме";
}

<!-- Хлебные крошки -->
<div class="bg-light py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-page="/Index" class="text-success">Главная</a></li>
                <li class="breadcrumb-item"><a asp-page="/EmployeeManagement/EmployeeManagementMenu" class="text-success">Панель соискателя</a></li>
                <li class="breadcrumb-item active" aria-current="page">@(Model.IsEditMode ? "Редактирование резюме" : "Создание резюме")</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Форма -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-success text-white py-3">
                        <h4 class="mb-0">
                            <i class="bi @(Model.IsEditMode ? "bi-pencil-square" : "bi-file-person") me-2"></i>
                            @(Model.IsEditMode ? "Редактировать резюме" : "Создать новое резюме")
                        </h4>
                    </div>
                    <div class="card-body p-4">
                        <form method="post">
                            <input type="hidden" asp-for="IsEditMode" />
                            @if (Model.IsEditMode)
                            {
                                <input type="hidden" asp-for="Input.Id" />
                            }

                            <!-- Основная информация -->
                            <h5 class="fw-semibold mb-3">Основная информация</h5>
                            <div class="row g-3 mb-4">
                                <div class="col-md-12">
                                    <label asp-for="Input.Title" class="form-label fw-semibold">Название резюме <span class="text-danger">*</span></label>
                                    <input asp-for="Input.Title" class="form-control" placeholder="Например: Опытный агроном">
                                        <span asp-validation-for="Input.Title" class="text-danger small"></span>
                                        <small class="text-muted">Краткое название, которое увидят работодатели</small>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="Input.FullName" class="form-label fw-semibold">ФИО <span class="text-danger">*</span></label>
                                        <input asp-for="Input.FullName" class="form-control" placeholder="Иванов Иван Иванович">
                                            <span asp-validation-for="Input.FullName" class="text-danger small"></span>
                                        </div>

                                        <div class="col-md-6">
                                            <label asp-for="Input.BirthDate" class="form-label fw-semibold">Дата рождения</label>
                                            <input asp-for="Input.BirthDate" type="date" class="form-control">
                                            </div>

                                            <div class="col-md-6">
                                                <label asp-for="Input.Phone" class="form-label fw-semibold">Телефон</label>
                                                <input asp-for="Input.Phone" class="form-control" placeholder="+7 (999) 123-45-67">
                                                </div>

                                                <div class="col-md-6">
                                                    <label asp-for="Input.Email" class="form-label fw-semibold">Email</label>
                                                    <input asp-for="Input.Email" class="form-control" placeholder="ivanov@mail.ru">
                                                    </div>

                                                    <div class="col-md-6">
                                                        <label asp-for="Input.Location" class="form-label fw-semibold">Город проживания</label>
                                                        <input asp-for="Input.Location" class="form-control" placeholder="Москва">
                                                        </div>

                                                        <div class="col-md-6">
                                                            <label asp-for="Input.Category" class="form-label fw-semibold">Желаемая категория</label>
                                                            <input asp-for="Input.Category" class="form-control" placeholder="Например: Агроном, Ветеринар">
                                                                <small class="text-muted">Укажите желаемую сферу деятельности</small>
                                                            </div>
                                                        </div>

                                                        <!-- Опыт и навыки -->
                                                        <h5 class="fw-semibold mb-3">Опыт и навыки</h5>
                                                        <div class="row g-3 mb-4">
                                                            <div class="col-md-4">
                                                                <label asp-for="Input.ExperienceYears" class="form-label fw-semibold">Общий стаж (лет)</label>
                                                                <input asp-for="Input.ExperienceYears" type="number" min="0" max="60" class="form-control">
                                                                </div>

                                                                <div class="col-md-8">
                                                                    <label asp-for="Input.DesiredSalary" class="form-label fw-semibold">Желаемая зарплата</label>
                                                                    <input asp-for="Input.DesiredSalary" class="form-control" placeholder="Например: 100 000 ₽ или Договорная">
                                                                    </div>

                                                                    <div class="col-md-12">
                                                                        <label asp-for="Input.Education" class="form-label fw-semibold">Образование</label>
                                                                        <textarea asp-for="Input.Education" class="form-control" rows="3" placeholder="Опишите ваше образование: ВУЗ, факультет, год окончания..."></textarea>
                                                                    </div>

                                                                    <div class="col-md-12">
                                                                        <label asp-for="Input.Experience" class="form-label fw-semibold">Опыт работы</label>
                                                                        <textarea asp-for="Input.Experience" class="form-control" rows="4" placeholder="Опишите ваш опыт работы: места работы, должности, обязанности..."></textarea>
                                                                    </div>

                                                                    <div class="col-md-12">
                                                                        <label asp-for="Input.Skills" class="form-label fw-semibold">Навыки</label>
                                                                        <textarea asp-for="Input.Skills" class="form-control" rows="3" placeholder="Перечислите ваши профессиональные навыки..."></textarea>
                                                                    </div>

                                                                    <div class="col-md-12">
                                                                        <label asp-for="Input.About" class="form-label fw-semibold">О себе</label>
                                                                        <textarea asp-for="Input.About" class="form-control" rows="3" placeholder="Расскажите о себе, личных качествах, достижениях..."></textarea>
                                                                    </div>
                                                                </div>

                                                                <!-- Дополнительные настройки -->
                                                                <h5 class="fw-semibold mb-3">Дополнительные настройки</h5>
                                                                <div class="row g-3 mb-4">
                                                                    <div class="col-md-6">
                                                                        <div class="form-check">
                                                                            <input asp-for="Input.ReadyToRelocate" class="form-check-input" />
                                                                            <label asp-for="Input.ReadyToRelocate" class="form-check-label">
                                                                                Готов к переезду
                                                                            </label>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-6">
                                                                        <div class="form-check">
                                                                            <input asp-for="Input.ReadyForBusinessTrips" class="form-check-input" />
                                                                            <label asp-for="Input.ReadyForBusinessTrips" class="form-check-label">
                                                                                Готов к командировкам
                                                                            </label>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <!-- Публикация -->
                                                                <h5 class="fw-semibold mb-3">Публикация</h5>
                                                                <div class="row g-3 mb-4">
                                                                    <div class="col-md-6">
                                                                        <div class="form-check">
                                                                            <input asp-for="Input.IsPublished" class="form-check-input" />
                                                                            <label asp-for="Input.IsPublished" class="form-check-label">
                                                                                Опубликовать резюме (будет видно работодателям)
                                                                            </label>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-6">
                                                                        <div class="form-check">
                                                                            <input asp-for="Input.IsActive" class="form-check-input" />
                                                                            <label asp-for="Input.IsActive" class="form-check-label">
                                                                                Активно (можно получать отклики)
                                                                            </label>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                                <hr class="my-4">

                                                                <!-- Кнопки -->
                                                                <div class="d-flex justify-content-between">
                                                                    <a asp-page="/EmployeeManagement/EmployeeManagementMenu" class="btn btn-outline-secondary">
                                                                        <i class="bi bi-arrow-left me-1"></i>Отмена
                                                                    </a>
                                                                    <button type="submit" class="btn btn-success px-5">
                                                                        <i class="bi bi-check-circle me-1"></i>
                                                                        @(Model.IsEditMode ? "Сохранить изменения" : "Создать резюме")
                                                                    </button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </section>

                                    @section Scripts {
                                        <partial name="_ValidationScriptsPartial" />
                                    }