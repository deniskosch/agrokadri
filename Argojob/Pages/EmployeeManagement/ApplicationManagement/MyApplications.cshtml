@page "/my-applications"
@using Agrojob.ViewModels
@model Agrojob.Pages.EmployeeManagement.ApplicationManagement.MyApplicationsModel
@{
    ViewData["Title"] = "Мои отклики";
    
    // Определяем цвета для статусов
    var statusColors = new Dictionary<string, (string bg, string text)>
    {
        ["pending"] = (bg: "rgba(255, 143, 0, 0.1)", text: "#FF8F00"),
        ["viewed"] = (bg: "rgba(23, 162, 184, 0.1)", text: "#17a2b8"),
        ["invited"] = (bg: "rgba(46, 125, 50, 0.1)", text: "#2E7D32"),
        ["accepted"] = (bg: "rgba(27, 94, 32, 0.1)", text: "#1B5E20"),
        ["rejected"] = (bg: "rgba(220, 53, 69, 0.1)", text: "#dc3545"),
        ["withdrawn"] = (bg: "rgba(107, 114, 128, 0.1)", text: "#6B7280"),
    };
}

<!-- Хлебные крошки -->
<div class="bg-light py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a asp-page="/Index" style="color: #2E7D32;">Главная</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-page="/EmployeeManagementMenu" style="color: #2E7D32;">Панель соискателя</a>
                </li>
                <li class="breadcrumb-item active" style="color: #6B7280;">Мои отклики</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Заголовок -->
<section class="py-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="section-title mb-0" style="font-size: 1.8rem;">Мои отклики</h1>
            <a asp-page="/Vacancies"
                   class="btn btn-outline-primary btn-sm rounded-pill px-3"
                   style="border-color: #2E7D32; color: #2E7D32;">
                <i class="bi bi-search me-1"></i>Найти вакансии
            </a>
        </div>

        <!-- Фильтры по статусам -->
        <div class="d-flex flex-wrap gap-2 mb-4">
            <a asp-page="MyApplications"
                   asp-route-status=""
                   class="filter-chip @(string.IsNullOrEmpty(Model.CurrentStatus) ? "active" : "")">
                Все
            </a>
            <a asp-page="MyApplications"
                   asp-route-status="pending"
                   class="filter-chip @(Model.CurrentStatus == "pending" ? "active" : "")">
                На рассмотрении
            </a>
            <a asp-page="MyApplications"
                   asp-route-status="viewed"
                   class="filter-chip @(Model.CurrentStatus == "viewed" ? "active" : "")">
                Просмотрено
            </a>
            <a asp-page="MyApplications"
                   asp-route-status="invited"
                   class="filter-chip @(Model.CurrentStatus == "invited" ? "active" : "")">
                Приглашение
            </a>
            <a asp-page="MyApplications"
                   asp-route-status="accepted"
                   class="filter-chip @(Model.CurrentStatus == "accepted" ? "active" : "")">
                Принято
            </a>
            <a asp-page="MyApplications"
                   asp-route-status="rejected"
                   class="filter-chip @(Model.CurrentStatus == "rejected" ? "active" : "")">
                Отказ
            </a>
        </div>

        <!-- Список откликов -->
        @if (Model.Applications.Any())
        {
            <div class="card shadow-sm border-0 rounded-4" style="border: 1px solid #E0E8E0 !important;">
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var app in Model.Applications)
                        {
                            var colors = statusColors.GetValueOrDefault(app.Status.ToString().ToLower(),
                                (bg: "rgba(107, 114, 128, 0.1)", text: "#6B7280"));
                            
                            <div class="list-group-item border-0 p-4" style="border-bottom: 1px solid #E0E8E0 !important;">
                                <div class="row align-items-center">
                                    <div class="col-md-5">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle p-2 me-3" style="background-color: rgba(46, 125, 50, 0.1);">
                                                <i class="bi bi-briefcase fs-4" style="color: #2E7D32;"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-semibold mb-1" style="color: #1C2E1C;">
                                                    <a asp-page="/VacancyDetail"
                                                           asp-route-id="@app.VacancyId"
                                                           style="color: #1C2E1C; text-decoration: none;">
                                                        @app.VacancyTitle
                                                    </a>
                                                </h6>
                                                <div class="d-flex flex-wrap gap-3 small" style="color: #6B7280;">
                                                    <span><i class="bi bi-building me-1"></i>@app.CompanyName</span>
                                                    <span><i class="bi bi-geo-alt me-1"></i>@app.Location</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-2">
                                        <span style="color: #2E7D32;">@app.Salary</span>
                                    </div>
                                    
                                    <div class="col-md-2">
                                        <span class="badge py-2 px-3" style="background-color: @colors.bg; color: @colors.text;">
                                            @app.StatusDisplay
                                        </span>
                                    </div>
                                    
                                    <div class="col-md-2">
                                        <span class="small" style="color: #6B7280;">
                                            <i class="bi bi-clock me-1"></i>@app.AppliedAtDisplay
                                        </span>
                                    </div>
                                    
                                    <div class="col-md-1 text-end">
                                        <div class="btn-group">
                                            <a asp-page="/VacancyDetail"
                                                   asp-route-id="@app.VacancyId"
                                                   class="btn btn-sm"
                                                   style="color: #2E7D32;"
                                                   title="Просмотреть вакансию">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            
                                            @if (app.CanWithdraw)
                                            {
                                                <button type="button"
                                                        class="btn btn-sm"
                                                        style="color: #dc3545;"
                                                        title="Отменить отклик"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#withdrawModal"
                                                        data-id="@app.Id"
                                                        data-vacancy="@app.VacancyTitle">
                                                    <i class="bi bi-x-circle"></i>
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(app.EmployerComment))
                                {
                                    <div class="mt-3 pt-2 border-top" style="border-color: #E0E8E0 !important;">
                                        <p class="small mb-0" style="color: #6B7280;">
                                            <i class="bi bi-chat-quote me-1"></i>
                                            <span style="color: #1C2E1C;">Комментарий:</span> @app.EmployerComment
                                        </p>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Пагинация -->
            @if (Model.TotalPages > 1)
            {
                <nav class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link"
                                   asp-page="MyApplications"
                                   asp-route-status="@Model.CurrentStatus"
                                   asp-route-page="@(Model.CurrentPage - 1)"
                                   style="color: #2E7D32; border-color: #E0E8E0;">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                        
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link"
                                       asp-page="MyApplications"
                                       asp-route-status="@Model.CurrentStatus"
                                       asp-route-page="@i"
                                       style="@(i == Model.CurrentPage ? "background-color: #2E7D32; border-color: #2E7D32; color: white;" : "color: #2E7D32; border-color: #E0E8E0;")">
                                    @i
                                </a>
                            </li>
                        }
                        
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link"
                                   asp-page="MyApplications"
                                   asp-route-status="@Model.CurrentStatus"
                                   asp-route-page="@(Model.CurrentPage + 1)"
                                   style="color: #2E7D32; border-color: #E0E8E0;">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox fs-1" style="color: #6B7280; opacity: 0.5;"></i>
                <h5 class="mt-3 fw-semibold" style="color: #1C2E1C;">У вас нет откликов</h5>
                <p style="color: #6B7280;">Начните поиск вакансий и откликайтесь на интересные предложения</p>
                <a asp-page="/Vacancies"
                       class="btn btn-primary btn-sm px-4 mt-2"
                       style="background-color: #2E7D32; border-color: #2E7D32;">
                    <i class="bi bi-search me-1"></i>Найти вакансии
                </a>
            </div>
        }
    </div>
</section>

<!-- Модальное окно подтверждения отмены отклика -->
<div class="modal fade" id="withdrawModal" tabindex="-1" aria-labelledby="withdrawModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #dc3545; color: white;">
                <h5 class="modal-title" id="withdrawModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>Отмена отклика
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Отменить отклик на вакансию <strong id="withdrawVacancyTitle" style="color: #1C2E1C;"></strong>?</p>
                <p class="small" style="color: #6B7280;">Работодатель перестанет видеть ваш отклик.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal" style="border-color: #6B7280; color: #6B7280;">
                    Нет
                </button>
                <form method="post" asp-page-handler="Withdraw">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="applicationId" id="withdrawApplicationId" value="" />
                    <button type="submit" class="btn btn-sm" style="background-color: #dc3545; color: white; border-color: #dc3545;">
                        <i class="bi bi-check-circle me-1"></i>Да, отменить
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Настройка модального окна отмены отклика
        var withdrawModal = document.getElementById('withdrawModal');
        withdrawModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var applicationId = button.getAttribute('data-id');
            var vacancyTitle = button.getAttribute('data-vacancy');
            
            document.getElementById('withdrawApplicationId').value = applicationId;
            document.getElementById('withdrawVacancyTitle').textContent = vacancyTitle;
        });
    </script>
}