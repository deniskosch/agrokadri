<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - агрокадры.рф</title>
	<script type="importmap"></script>

	<!-- Bootstrap 5 CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
	<!-- Bootstrap Icons -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<!-- Google Fonts -->
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

	@* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/loader.css" asp-append-version="true" />
	@* <link rel="stylesheet" href="~/Agrojob.styles.css" asp-append-version="true" />  *@
</head>
<body>
	<div class="loader-wrapper" id="loaderWrapper">
		<div class="loader"></div>
	</div>

	@await Html.PartialAsync("_Header")
	<div style="padding: 140px 0 0px 0;"></div>
	@RenderBody()
	@await Html.PartialAsync("_Footer")

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

@* 	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script> *@

	@await RenderSectionAsync("Scripts", required: false)

	<script>
		// Скрываем лоадер после полной загрузки страницы
		window.addEventListener('load', function() {
		const loaderWrapper = document.getElementById('loaderWrapper');
			
		// Добавляем класс для плавного исчезновения
		loaderWrapper.classList.add('fade-out');
			
		// Удаляем из DOM после завершения анимации
		setTimeout(function() {
		loaderWrapper.style.display = 'none';
		}, 500);
		});

		// На случай, если load уже произошел до выполнения скрипта
		if (document.readyState === 'complete') {
		const loaderWrapper = document.getElementById('loaderWrapper');
		loaderWrapper.classList.add('fade-out');
		setTimeout(function() {
		loaderWrapper.style.display = 'none';
		}, 500);
		}
	</script>
</body>
</html>
