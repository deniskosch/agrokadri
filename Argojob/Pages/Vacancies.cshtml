@page "/vacancies"
@model Agrojob.Pages.VacanciesModel
@{
    ViewData["Title"] = "Все вакансии";
}

<!-- Хлебные крошки -->
<div class="bg-light py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-page="/Index" class="text-success">Главная</a></li>
                <li class="breadcrumb-item active" aria-current="page">Все вакансии</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Фильтры и поиск -->
<section class="py-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 mb-4">
                <!-- Фильтры в сайдбаре -->
                <div class="card shadow-sm border-0 sticky-top" style="top: 100px;">
                    <div class="card-header bg-white border-0">
                        <h6 class="mb-0 fw-semibold">
                            <i class="bi bi-funnel me-2 text-success"></i>Фильтры
                        </h6>
                    </div>
                    <div class="card-body pt-0">
                        <!-- Поиск -->
                        <div class="mb-3">
                            <label class="form-label small text-muted mb-1">Поиск</label>
                            <form method="get" asp-page="Vacancies">
                                <div class="input-group">
                                    <input type="text" class="form-control form-control-sm" name="search" value="@Model.Search" placeholder="Должность или компания">
                                    <button type="submit" class="btn btn-primary btn-sm" style="margin-left: 5px;">
                                        <i class="bi bi-search"></i>
                                    </button>
                                </div>
                            </form>
                        </div>

                        <!-- Категории -->
                        <div class="mb-3">
                            <label class="form-label small text-muted mb-1">Категория</label>
                            <div class="list-group list-group-flush">
                                <a asp-page="Vacancies"
                                       asp-route-category="all"
                                       asp-route-search="@Model.Search"
                                       class="list-group-item list-group-item-action border-0 d-flex justify-content-between align-items-center p-1 small @(Model.CurrentCategory == "all" ? "text-decoration-underline text-primary fw-semibold" : "text-secondary")">
                                    Все вакансии
                                    <span class="badge @(Model.CurrentCategory == "all" ? "bg-primary text-white" : "bg-secondary bg-opacity-10 text-white") rounded-pill">@Model.TotalVacancies</span>
                                </a>
                                <a asp-page="Vacancies"
                                       asp-route-category="сезонные"
                                       asp-route-search="@Model.Search"
                                       class="list-group-item list-group-item-action border-0 d-flex justify-content-between align-items-center p-1 small @(Model.CurrentCategory == "сезонные" ? "text-decoration-underline text-primary fw-semibold" : "text-secondary")">
                                    Сезонные
                                    <span class="badge @(Model.CurrentCategory == "сезонные" ? "bg-primary text-white" : "bg-secondary bg-opacity-10 text-white") rounded-pill">@Model.SeasonalCount</span>
                                </a>
                                <!-- остальные категории -->
                            </div>
                        </div>

                        <!-- Тип занятости -->
                        @* <div class="mb-3">
                            <label class="form-label small text-muted mb-1">Тип занятости</label>
                            <div class="list-group list-group-flush">
                                <a asp-page="Vacancies"
                                       asp-route-type="all"
                                       asp-route-category="@Model.CurrentCategory"
                                       asp-route-search="@Model.Search"
                                       class="list-group-item list-group-item-action border-0 p-1 small @(Model.EmploymentType == "all" ? "text-decoration-underline text-primary fw-semibold" : "text-secondary")">
                                    Все типы
                                </a>
                                <a asp-page="Vacancies"
                                       asp-route-type="seasonal"
                                       asp-route-category="@Model.CurrentCategory"
                                       asp-route-search="@Model.Search"
                                       class="list-group-item list-group-item-action border-0 p-1 small @(Model.EmploymentType == "seasonal" ? "text-decoration-underline text-primary fw-semibold" : "text-secondary")">
                                    Только сезонные
                                </a>
                                <a asp-page="Vacancies"
                                       asp-route-type="permanent"
                                       asp-route-category="@Model.CurrentCategory"
                                       asp-route-search="@Model.Search"
                                       class="list-group-item list-group-item-action border-0 p-1 small @(Model.EmploymentType == "permanent" ? "text-decoration-underline text-primary fw-semibold" : "text-secondary")">
                                    Только постоянные
                                </a>
                            </div>
                        </div> *@

                        <hr class="my-3">

                        <!-- Сбросить фильтры -->
                        <a asp-page="Vacancies" class="btn btn-outline-primary btn-sm w-100">
                            <i class="bi bi-arrow-counterclockwise me-1"></i>Сбросить
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-9">
                <!-- Результаты поиска -->
                @if (!string.IsNullOrEmpty(Model.Search))
                {
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle me-2"></i>Результаты поиска по запросу: <strong>"@Model.Search"</strong>
                        <a asp-page="Vacancies" asp-route-category="@Model.CurrentCategory" class="float-end text-decoration-none">Сбросить</a>
                    </div>
                }
                
                <!-- Список вакансий -->
                @if (Model.FilteredVacancies.Any())
                {
                    <div class="row g-4">
                        @foreach (var vacancy in Model.FilteredVacancies)
                        {
                            <div class="col-md-6">
                                <div class="vacancy-card @(vacancy.IsSeasonal ? "seasonal" : "") h-100">
                                    @if (vacancy.IsSeasonal)
                                    {
                                        <span class="seasonal-tag">🌾 Сезонная</span>
                                    }
                                    <span class="company-badge">
                                        <i class="bi bi-geo-alt me-1"></i>@vacancy.Location
                                    </span>
                                    <h3 class="vacancy-title">@vacancy.Title</h3>
                                    <div class="company-name">
                                        <i class="bi bi-building"></i>
                                        @vacancy.Company
                                    </div>
                                    <div class="salary">
                                        @vacancy.Salary ₽
                                    </div>
                                    <div class="tags">
                                        @foreach (var tag in vacancy.Tags.Take(3))
                                        {
                                            <span class="tag">@tag</span>
                                        }
                                        @if (vacancy.Tags.Count > 3)
                                        {
                                            <span class="tag">+@(vacancy.Tags.Count - 3)</span>
                                        }
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <div class="posted-date">
                                            <i class="bi bi-clock"></i> @vacancy.PostedDate
                                        </div>
                                        <a asp-page="VacancyDetail" asp-route-id="@vacancy.Id" class="btn btn-outline-primary">
                                            Подробнее <i class="bi bi-arrow-right ms-1"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <!-- Пагинация -->
                    @if (Model.TotalPages > 1)
                    {
                        <div style="display:flex;justify-content:space-between;align-items:center;margin-top:40px;padding:20px;background:#fff;border-radius:10px;box-shadow:0 2px 15px rgba(0,0,0,0.1);">

                            <div style="color:#666;font-size:14px;">
                                Страница @Model.CurrentPage из @Model.TotalPages
                            </div>

                            <ul style="display:flex;list-style:none;margin:0;padding:0;gap:5px;">

                                <!-- Назад -->
                                <li class="@(Model.CurrentPage == 1 ? "disabled" : "")">
                                    <a href="/vacancies?page=@(Model.CurrentPage - 1)&category=@Model.CurrentCategory&type=@Model.EmploymentType&search=@Model.Search"
                                           style="display:flex;align-items:center;justify-content:center;width:40px;height:40px;border-radius:8px;background:#f5f5f5;color:#666;text-decoration:none;@(Model.CurrentPage == 1 ? "opacity:0.5;pointer-events:none;" : "")">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>

                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    if (i == 1 ||
                                        i == Model.TotalPages ||
                                        (i >= Model.CurrentPage - 2 && i <= Model.CurrentPage + 2))
                                    {
                                        <li>
                                            <a href="/vacancies?page=@i&category=@Model.CurrentCategory&type=@Model.EmploymentType&search=@Model.Search"
                                                   style="display:flex;align-items:center;justify-content:center;width:40px;height:40px;border-radius:8px;
                                                background:@(i == Model.CurrentPage ? "#237F26" : "#f5f5f5");
                                                color:@(i == Model.CurrentPage ? "#fff" : "#666");
                                                text-decoration:none;">
                                                @i
                                            </a>
                                        </li>
                                    }
                                    else if (i == Model.CurrentPage - 3 || i == Model.CurrentPage + 3)
                                    {
                                        <li>
                                            <span style="display:flex;align-items:center;justify-content:center;width:40px;height:40px;color:#666;">
                                                ...
                                            </span>
                                        </li>
                                    }
                                }

                                <!-- Вперёд -->
                                <li class="@(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                    <a href="/vacancies?page=@(Model.CurrentPage + 1)&category=@Model.CurrentCategory&type=@Model.EmploymentType&search=@Model.Search"
                                           style="display:flex;align-items:center;justify-content:center;width:40px;height:40px;border-radius:8px;background:#f5f5f5;color:#666;text-decoration:none;@(Model.CurrentPage == Model.TotalPages ? "opacity:0.5;pointer-events:none;" : "")">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>

                            </ul>
                        </div>
                    }

                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox display-1 text-muted"></i>
                        <h4 class="mt-3">Вакансии не найдены</h4>
                        <p class="text-muted">Попробуйте изменить параметры поиска или фильтры</p>
                        <a asp-page="Vacancies" class="btn btn-primary">Сбросить все фильтры</a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>