@page "/vacancies"
@model Agrojob.Pages.VacanciesModel
@{
    ViewData["Title"] = "Все вакансии";
}

<!-- Хлебные крошки -->
<div class="bg-light py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-page="/Index" class="text-success">Главная</a></li>
                <li class="breadcrumb-item active" aria-current="page">Все вакансии</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Фильтры и поиск -->
<section class="py-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 mb-4">
                <!-- Фильтры в сайдбаре -->
                <div class="card shadow-sm border-0 sticky-top" style="top: 100px; z-index: 1;">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0"><i class="bi bi-funnel me-2 text-success"></i>Фильтры</h5>
                    </div>
                    <div class="card-body">
                        <!-- Поиск -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Поиск</label>
                            <form method="get" asp-page="Vacancies">
                                <div class="input-group">
                                    <input type="text" class="form-control" name="search" value="@Model.Search" placeholder="Должность или компания">
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-search"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                        
                        <!-- Категории -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Категория</label>
                            <div class="list-group list-group-flush">
                                <a asp-page="Vacancies"
                                       asp-route-category="all"
                                       asp-route-search="@Model.Search"
                                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @(Model.CurrentCategory == "all" ? "active bg-success text-white" : "")">
                                    Все вакансии
                                    <span class="badge @(Model.CurrentCategory == "all" ? "bg-white text-success" : "bg-success bg-opacity-10 text-success") rounded-pill">@Model.TotalVacancies</span>
                                </a>
                                <a asp-page="Vacancies"
                                       asp-route-category="сезонные"
                                       asp-route-search="@Model.Search"
                                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @(Model.CurrentCategory == "сезонные" ? "active bg-success text-white" : "")">
                                    Сезонные
                                    <span class="badge @(Model.CurrentCategory == "сезонные" ? "bg-white text-success" : "bg-success bg-opacity-10 text-success") rounded-pill">@Model.SeasonalCount</span>
                                </a>
                                <a asp-page="Vacancies"
                                       asp-route-category="агроном"
                                       asp-route-search="@Model.Search"
                                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @(Model.CurrentCategory == "агроном" ? "active bg-success text-white" : "")">
                                    Агрономы
                                    <span class="badge @(Model.CurrentCategory == "агроном" ? "bg-white text-success" : "bg-success bg-opacity-10 text-success") rounded-pill">@Model.AgronomCount</span>
                                </a>
                                <a asp-page="Vacancies"
                                       asp-route-category="ветеринар"
                                       asp-route-search="@Model.Search"
                                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @(Model.CurrentCategory == "ветеринар" ? "active bg-success text-white" : "")">
                                    Ветеринары
                                    <span class="badge @(Model.CurrentCategory == "ветеринар" ? "bg-white text-success" : "bg-success bg-opacity-10 text-success") rounded-pill">@Model.VeterinarCount</span>
                                </a>
                                <a asp-page="Vacancies"
                                       asp-route-category="механизатор"
                                       asp-route-search="@Model.Search"
                                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @(Model.CurrentCategory == "механизатор" ? "active bg-success text-white" : "")">
                                    Механизаторы
                                    <span class="badge @(Model.CurrentCategory == "механизатор" ? "bg-white text-success" : "bg-success bg-opacity-10 text-success") rounded-pill">@Model.MechanizatorCount</span>
                                </a>
                                <a asp-page="Vacancies"
                                       asp-route-category="технолог"
                                       asp-route-search="@Model.Search"
                                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @(Model.CurrentCategory == "технолог" ? "active bg-success text-white" : "")">
                                    Технологи
                                    <span class="badge @(Model.CurrentCategory == "технолог" ? "bg-white text-success" : "bg-success bg-opacity-10 text-success") rounded-pill">@Model.TechnologCount</span>
                                </a>
                                <a asp-page="Vacancies"
                                       asp-route-category="инженер"
                                       asp-route-search="@Model.Search"
                                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @(Model.CurrentCategory == "инженер" ? "active bg-success text-white" : "")">
                                    Инженеры
                                    <span class="badge @(Model.CurrentCategory == "инженер" ? "bg-white text-success" : "bg-success bg-opacity-10 text-success") rounded-pill">@Model.EngineerCount</span>
                                </a>
                            </div>
                        </div>
                        
                        <!-- Тип занятости -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">Тип занятости</label>
                            <div class="list-group list-group-flush">
                                <a asp-page="Vacancies"
                                       asp-route-type="all"
                                       asp-route-category="@Model.CurrentCategory"
                                       asp-route-search="@Model.Search"
                                       class="list-group-item list-group-item-action @(Model.EmploymentType == "all" ? "active bg-success text-white" : "")">
                                    Все типы
                                </a>
                                <a asp-page="Vacancies"
                                       asp-route-type="seasonal"
                                       asp-route-category="@Model.CurrentCategory"
                                       asp-route-search="@Model.Search"
                                       class="list-group-item list-group-item-action @(Model.EmploymentType == "seasonal" ? "active bg-success text-white" : "")">
                                    Только сезонные
                                </a>
                                <a asp-page="Vacancies"
                                       asp-route-type="permanent"
                                       asp-route-category="@Model.CurrentCategory"
                                       asp-route-search="@Model.Search"
                                       class="list-group-item list-group-item-action @(Model.EmploymentType == "permanent" ? "active bg-success text-white" : "")">
                                    Только постоянные
                                </a>
                            </div>
                        </div>
                        
                        <!-- Сбросить фильтры -->
                        <a asp-page="Vacancies" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-arrow-counterclockwise me-2"></i>Сбросить фильтры
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-9">
                <!-- Результаты поиска -->
                @if (!string.IsNullOrEmpty(Model.Search))
                {
                    <div class="alert alert-info mb-4">
                        <i class="bi bi-info-circle me-2"></i>Результаты поиска по запросу: <strong>"@Model.Search"</strong>
                        <a asp-page="Vacancies" asp-route-category="@Model.CurrentCategory" class="float-end text-decoration-none">Сбросить</a>
                    </div>
                }
                
                <!-- Список вакансий -->
                @if (Model.FilteredVacancies.Any())
                {
                    <div class="row g-4">
                        @foreach (var vacancy in Model.FilteredVacancies)
                        {
                            <div class="col-md-6">
                                <div class="vacancy-card @(vacancy.IsSeasonal ? "seasonal" : "") h-100">
                                    @if (vacancy.IsSeasonal)
                                    {
                                        <span class="seasonal-tag">🌾 Сезонная</span>
                                    }
                                    <span class="company-badge">
                                        <i class="bi bi-geo-alt me-1"></i>@vacancy.Location
                                    </span>
                                    <h3 class="vacancy-title">@vacancy.Title</h3>
                                    <div class="company-name">
                                        <i class="bi bi-building"></i>
                                        @vacancy.Company
                                    </div>
                                    <div class="salary">
                                        @vacancy.Salary <small>на руки</small>
                                    </div>
                                    <div class="tags">
                                        @foreach (var tag in vacancy.Tags.Take(3))
                                        {
                                            <span class="tag">@tag</span>
                                        }
                                        @if (vacancy.Tags.Count > 3)
                                        {
                                            <span class="tag">+@(vacancy.Tags.Count - 3)</span>
                                        }
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <div class="posted-date">
                                            <i class="bi bi-clock"></i> @vacancy.PostedDate
                                        </div>
                                        <a asp-page="VacancyDetail" asp-route-id="@vacancy.Id" class="btn btn-outline-success">
                                            Подробнее <i class="bi bi-arrow-right ms-1"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <!-- Пагинация -->
                    @if (Model.TotalPages > 1)
                    {
                        <nav class="mt-5">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link text-success"
                                           asp-page="Vacancies"
                                           asp-route-page="@(Model.CurrentPage - 1)"
                                           asp-route-category="@Model.CurrentCategory"
                                           asp-route-search="@Model.Search"
                                           asp-route-type="@Model.EmploymentType">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>
                                
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link @(i == Model.CurrentPage ? "bg-success border-success text-white" : "text-success")"
                                           asp-page="Vacancies"
                                           asp-route-page="@i"
                                           asp-route-category="@Model.CurrentCategory"
                                           asp-route-search="@Model.Search"
                                           asp-route-type="@Model.EmploymentType">@i</a>
                                    </li>
                                }
                                
                                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link text-success"
                                           asp-page="Vacancies"
                                           asp-route-page="@(Model.CurrentPage + 1)"
                                           asp-route-category="@Model.CurrentCategory"
                                           asp-route-search="@Model.Search"
                                           asp-route-type="@Model.EmploymentType">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox display-1 text-muted"></i>
                        <h4 class="mt-3">Вакансии не найдены</h4>
                        <p class="text-muted">Попробуйте изменить параметры поиска или фильтры</p>
                        <a asp-page="Vacancies" class="btn btn-success">Сбросить все фильтры</a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>