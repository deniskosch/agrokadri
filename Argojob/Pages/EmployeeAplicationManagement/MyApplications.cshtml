@page "/my-applications"
@using Agrojob.ViewModels
@model Agrojob.Pages.EmployeeAplicationManagement.MyApplicationsModel
@{
    ViewData["Title"] = "Мои отклики";
}

<!-- Хлебные крошки -->
<div class="bg-light py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-page="/Index" class="text-success">Главная</a></li>
                <li class="breadcrumb-item"><a asp-page="/EmployeeManagementMenu" class="text-success">Панель соискателя</a></li>
                <li class="breadcrumb-item active" aria-current="page">Мои отклики</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Заголовок -->
<section class="py-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="section-title mb-0">Мои отклики</h1>
            <a asp-page="/Vacancies" class="btn btn-success">
                <i class="bi bi-search me-2"></i>Найти вакансии
            </a>
        </div>

        <!-- Статистика -->
        <div class="row g-3 mb-4">
            <div class="col-md-3 col-6">
                <div class="card bg-primary bg-opacity-10 border-0">
                    <div class="card-body text-center">
                        <h3 class="fw-bold text-primary">@Model.TotalCount</h3>
                        <span class="text-muted">Всего откликов</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card bg-warning bg-opacity-10 border-0">
                    <div class="card-body text-center">
                        <h3 class="fw-bold text-warning">@Model.PendingCount</h3>
                        <span class="text-muted">На рассмотрении</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card bg-success bg-opacity-10 border-0">
                    <div class="card-body text-center">
                        <h3 class="fw-bold text-success">@Model.AcceptedCount</h3>
                        <span class="text-muted">Принято</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card bg-danger bg-opacity-10 border-0">
                    <div class="card-body text-center">
                        <h3 class="fw-bold text-danger">@Model.RejectedCount</h3>
                        <span class="text-muted">Отказано</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Фильтры по статусам -->
        <div class="d-flex flex-wrap gap-2 mb-4">
            <a asp-page="MyApplications" asp-route-status=""
                   class="filter-chip @(string.IsNullOrEmpty(Model.CurrentStatus) ? "active" : "")">
                Все
            </a>
            <a asp-page="MyApplications" asp-route-status="pending"
                   class="filter-chip @(Model.CurrentStatus == "pending" ? "active" : "")">
                На рассмотрении
            </a>
            <a asp-page="MyApplications" asp-route-status="viewed"
                   class="filter-chip @(Model.CurrentStatus == "viewed" ? "active" : "")">
                Просмотрено
            </a>
            <a asp-page="MyApplications" asp-route-status="invited"
                   class="filter-chip @(Model.CurrentStatus == "invited" ? "active" : "")">
                Приглашение
            </a>
            <a asp-page="MyApplications" asp-route-status="accepted"
                   class="filter-chip @(Model.CurrentStatus == "accepted" ? "active" : "")">
                Принято
            </a>
            <a asp-page="MyApplications" asp-route-status="rejected"
                   class="filter-chip @(Model.CurrentStatus == "rejected" ? "active" : "")">
                Отказ
            </a>
        </div>

        <!-- Список откликов -->
        @if (Model.Applications.Any())
        {
            <div class="row g-4">
                @foreach (var app in Model.Applications)
                {
                    <div class="col-12">
                        <div class="card shadow-sm border-0 application-card">
                            <div class="card-body p-4">
                                <div class="row align-items-center">
                                    <div class="col-lg-5">
                                        <div class="d-flex align-items-center mb-2 mb-lg-0">
                                            <div class="bg-light rounded-circle p-3 me-3 d-none d-md-block">
                                                <i class="bi bi-briefcase fs-4 text-success"></i>
                                            </div>
                                            <div>
                                                <h5 class="fw-bold mb-1">
                                                    <a asp-page="/VacancyDetail" asp-route-id="@app.VacancyId" class="text-decoration-none text-dark">
                                                        @app.VacancyTitle
                                                    </a>
                                                </h5>
                                                <div class="d-flex flex-wrap gap-3 small text-muted">
                                                    <span><i class="bi bi-building me-1"></i>@app.CompanyName</span>
                                                    <span><i class="bi bi-geo-alt me-1"></i>@app.Location</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-lg-2">
                                        <div class="mb-2 mb-lg-0">
                                            <span class="fw-semibold">@app.Salary</span>
                                        </div>
                                    </div>
                                    
                                    <div class="col-lg-2">
                                        <div class="mb-2 mb-lg-0">
                                            <span class="badge bg-@app.StatusColor bg-opacity-10 text-@app.StatusColor p-2">
                                                <i class="bi @app.Status.GetIconClass() me-1"></i>
                                                @app.StatusDisplay
                                            </span>
                                        </div>
                                    </div>
                                    
                                    <div class="col-lg-2">
                                        <div class="small text-muted">
                                            <i class="bi bi-clock me-1"></i>@app.AppliedAtDisplay
                                        </div>
                                        @if (app.StatusUpdatedAtDisplay != null)
                                        {
                                            <div class="small text-muted">
                                                <i class="bi bi-arrow-repeat me-1"></i>@app.StatusUpdatedAtDisplay
                                            </div>
                                        }
                                    </div>
                                    
                                    <div class="col-lg-1 text-end">
                                        <div class="btn-group">
                                            <a asp-page="/VacancyDetail" asp-route-id="@app.VacancyId"
                                                   class="btn btn-outline-success btn-sm" title="Просмотреть вакансию">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            
                                            @if (app.CanWithdraw)
                                            {
                                                <button type="button" class="btn btn-outline-danger btn-sm"
                                                        title="Отменить отклик"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#withdrawModal"
                                                        data-id="@app.Id"
                                                        data-vacancy="@app.VacancyTitle">
                                                    <i class="bi bi-x-circle"></i>
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(app.CoverLetter))
                                {
                                    <div class="mt-3 pt-2 border-top">
                                        <p class="text-muted small mb-0">
                                            <i class="bi bi-chat-quote me-1"></i>
                                            @app.CoverLetter
                                        </p>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(app.EmployerComment))
                                {
                                    <div class="mt-2 pt-1">
                                        <div class="bg-light p-2 rounded">
                                            <p class="small text-muted mb-0">
                                                <i class="bi bi-building me-1"></i>
                                                <span class="fw-semibold">Комментарий работодателя:</span> @app.EmployerComment
                                            </p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Пагинация -->
            @if (Model.TotalPages > 1)
            {
                <nav class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link text-success"
                                   asp-page="MyApplications"
                                   asp-route-status="@Model.CurrentStatus"
                                   asp-route-page="@(Model.CurrentPage - 1)">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                        
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link @(i == Model.CurrentPage ? "bg-success border-success text-white" : "text-success")"
                                   asp-page="MyApplications"
                                   asp-route-status="@Model.CurrentStatus"
                                   asp-route-page="@i">@i</a>
                            </li>
                        }
                        
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link text-success"
                                   asp-page="MyApplications"
                                   asp-route-status="@Model.CurrentStatus"
                                   asp-route-page="@(Model.CurrentPage + 1)">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <h4 class="mt-3">У вас нет откликов</h4>
                <p class="text-muted">Начните поиск вакансий и откликайтесь на интересные предложения</p>
                <a asp-page="/Vacancies" class="btn btn-success btn-lg mt-2">
                    <i class="bi bi-search me-2"></i>Найти вакансии
                </a>
            </div>
        }
    </div>
</section>

<!-- Модальное окно подтверждения отмены отклика -->
<div class="modal fade" id="withdrawModal" tabindex="-1" aria-labelledby="withdrawModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="withdrawModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>Отмена отклика
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Вы действительно хотите отменить отклик на вакансию <strong id="withdrawVacancyTitle"></strong>?</p>
                <p class="text-muted small">Это действие нельзя будет отменить. Работодатель перестанет видеть ваш отклик.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Нет, оставить</button>
                <form method="post" asp-page-handler="Withdraw">
                    <input type="hidden" name="applicationId" id="withdrawApplicationId" value="" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-check-circle me-1"></i>Да, отменить
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Настройка модального окна отмены отклика
        var withdrawModal = document.getElementById('withdrawModal');
        withdrawModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var applicationId = button.getAttribute('data-id');
            var vacancyTitle = button.getAttribute('data-vacancy');
            
            document.getElementById('withdrawApplicationId').value = applicationId;
            document.getElementById('withdrawVacancyTitle').textContent = vacancyTitle;
        });
    </script>
}
