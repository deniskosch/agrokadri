@page "/vacancy-applications/{vacancyId}"
@using Agrojob.ViewModels
@model Agrojob.Pages.ApplicationsManagement.VacancyApplicationsModel
@{
    ViewData["Title"] = $"Отклики на вакансию: {Model.VacancyTitle}";
}

<!-- Хлебные крошки -->
<div class="bg-light py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-page="/Index" class="text-success">Главная</a></li>
                <li class="breadcrumb-item"><a asp-page="/EmployerManagementMenu" class="text-success">Панель работодателя</a></li>
                <li class="breadcrumb-item"><a asp-page="/VacancyManagement/MyVacancies" class="text-success">Мои вакансии</a></li>
                <li class="breadcrumb-item active" aria-current="page">Отклики на вакансию</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Заголовок -->
<section class="py-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="section-title mb-2">@Model.VacancyTitle</h1>
                <p class="text-muted mb-0">
                    <i class="bi bi-building me-1"></i>@Model.CompanyName
                </p>
            </div>
            <a asp-page="/VacancyManagement/MyVacancies" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Назад к вакансиям
            </a>
        </div>

        <!-- Статистика -->
        <div class="row g-3 mb-4">
            <div class="col-md-3 col-6">
                <div class="card bg-primary bg-opacity-10 border-0">
                    <div class="card-body text-center">
                        <h3 class="fw-bold text-primary">@Model.TotalCount</h3>
                        <span class="text-muted">Всего откликов</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card bg-warning bg-opacity-10 border-0">
                    <div class="card-body text-center">
                        <h3 class="fw-bold text-warning">@Model.PendingCount</h3>
                        <span class="text-muted">На рассмотрении</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card bg-info bg-opacity-10 border-0">
                    <div class="card-body text-center">
                        <h3 class="fw-bold text-info">@Model.ViewedCount</h3>
                        <span class="text-muted">Просмотрено</span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card bg-success bg-opacity-10 border-0">
                    <div class="card-body text-center">
                        <h3 class="fw-bold text-success">@Model.AcceptedCount</h3>
                        <span class="text-muted">Принято</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Фильтры по статусам -->
        <div class="d-flex flex-wrap gap-2 mb-4">
            <a asp-page="VacancyApplications" asp-route-vacancyId="@Model.VacancyId" asp-route-status=""
                   class="filter-chip @(string.IsNullOrEmpty(Model.CurrentStatus) ? "active" : "")">
                Все
            </a>
            @foreach (var status in Model.AvailableStatuses)
            {
                <a asp-page="VacancyApplications" asp-route-vacancyId="@Model.VacancyId" asp-route-status="@status"
                       class="filter-chip @(Model.CurrentStatus == status ? "active" : "")">
                    @status
                </a>
            }
        </div>

        <!-- Список откликов -->
        @if (Model.Applications.Any())
        {
            <div class="row g-4">
                @foreach (var app in Model.Applications)
                {
                    <div class="col-12">
                        <div class="card shadow-sm border-0 application-card">
                            <div class="card-body p-4">
                                <div class="row align-items-center">
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center mb-2 mb-md-0">
                                            <div class="bg-light rounded-circle p-3 me-3">
                                                <i class="bi bi-person-circle fs-4 text-success"></i>
                                            </div>
                                            <div>
                                                <h5 class="fw-bold mb-1">@app.ApplicantName</h5>
                                                <div class="d-flex flex-wrap gap-3 small text-muted">
                                                    <span><i class="bi bi-envelope me-1"></i>@app.ApplicantEmail</span>
                                                    @if (!string.IsNullOrEmpty(app.ApplicantPhone))
                                                    {
                                                        <span><i class="bi bi-telephone me-1"></i>@app.ApplicantPhone</span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-3">
                                        @if (app.ResumeId.HasValue)
                                        {
                                            <a asp-page="/ResumeManagement/ResumeDetail" asp-route-id="@app.ResumeId"
                                                   class="text-decoration-none" target="_blank">
                                                <i class="bi bi-file-text me-1"></i>@(app.ResumeTitle ?? "Резюме")
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">
                                                <i class="bi bi-file-text me-1"></i>Резюме не указано
                                            </span>
                                        }
                                    </div>
                                    
                                    <div class="col-md-2">
                                        <span class="badge bg-@app.StatusColor bg-opacity-10 text-@app.StatusColor p-2">
                                            <i class="bi @app.Status.GetIconClass() me-1"></i>
                                            @app.StatusDisplay
                                        </span>
                                    </div>
                                    
                                    <div class="col-md-1 text-end">
                                        <a asp-page="ApplicationDetail" asp-route-id="@app.Id"
                                               class="btn btn-outline-success btn-sm">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </div>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(app.CoverLetterPreview))
                                {
                                    <div class="mt-3 pt-2 border-top">
                                        <p class="text-muted small mb-0">
                                            <i class="bi bi-chat-quote me-1"></i>
                                            @app.CoverLetterPreview
                                        </p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Пагинация -->
            @if (Model.TotalPages > 1)
            {
                <nav class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link text-success"
                                   asp-page="VacancyApplications"
                                   asp-route-vacancyId="@Model.VacancyId"
                                   asp-route-status="@Model.CurrentStatus"
                                   asp-route-page="@(Model.CurrentPage - 1)">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                        
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link @(i == Model.CurrentPage ? "bg-success border-success text-white" : "text-success")"
                                   asp-page="VacancyApplications"
                                   asp-route-vacancyId="@Model.VacancyId"
                                   asp-route-status="@Model.CurrentStatus"
                                   asp-route-page="@i">@i</a>
                            </li>
                        }
                        
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link text-success"
                                   asp-page="VacancyApplications"
                                   asp-route-vacancyId="@Model.VacancyId"
                                   asp-route-status="@Model.CurrentStatus"
                                   asp-route-page="@(Model.CurrentPage + 1)">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <h4 class="mt-3">Нет откликов</h4>
                <p class="text-muted">На эту вакансию пока никто не откликнулся</p>
            </div>
        }
    </div>
</section>