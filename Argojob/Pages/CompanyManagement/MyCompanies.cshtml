@page "/my-companies"
@model Agrojob.Pages.CompanyManagement.MyCompaniesModel
@{
    ViewData["Title"] = "Мои компании";
}

<!-- Хлебные крошки -->
<div class="bg-light py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-page="/Index" class="text-success">Главная</a></li>
                <li class="breadcrumb-item active" aria-current="page">Мои компании</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Заголовок и кнопка создания -->
<section class="py-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="section-title mb-0">Мои компании</h1>
            <a asp-page="/CompanyManagement/CompanyEdit" class="btn btn-success">
                <i class="bi bi-plus-circle me-2"></i>Создать компанию
            </a>
        </div>

        <!-- Статистика -->
        <div class="row g-3 mb-4">
            <div class="col-md-4 col-6">
                <div class="card bg-success bg-opacity-10 border-0">
                    <div class="card-body text-center">
                        <h3 class="fw-bold text-success">@Model.TotalCount</h3>
                        <span class="text-muted">Всего компаний</span>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-6">
                <div class="card bg-primary bg-opacity-10 border-0">
                    <div class="card-body text-center">
                        <h3 class="fw-bold text-primary">@Model.VerifiedCount</h3>
                        <span class="text-muted">Проверенные</span>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-6">
                <div class="card bg-info bg-opacity-10 border-0">
                    <div class="card-body text-center">
                        <h3 class="fw-bold text-info">@Model.TotalVacancies</h3>
                        <span class="text-muted">Всего вакансий</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Список компаний -->
        @if (Model.Companies.Any())
        {
            <div class="row g-4">
                @foreach (var company in Model.Companies)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0 company-card">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div class="company-icon bg-light rounded-circle p-3">
                                        <i class="bi bi-building fs-2 text-success"></i>
                                    </div>
                                    @if (company.IsVerified)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success" title="Проверенная компания">
                                            <i class="bi bi-patch-check-fill me-1"></i>Проверено
                                        </span>
                                    }
                                </div>
                                
                                <h5 class="card-title fw-bold mb-2">@company.Name</h5>
                                
                                @if (!string.IsNullOrEmpty(company.Description))
                                {
                                    <p class="card-text text-muted small mb-3">@(company.Description.Length > 100 ? company.Description.Substring(0, 100) + "..." : company.Description)</p>
                                }
                                
                                <div class="mb-3">
                                    <div class="d-flex align-items-center text-muted small mb-2">
                                        <i class="bi bi-person-fill me-2"></i>
                                        <span>@(company.ContactPerson ?? "Контакт не указан")</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(company.ContactPhone))
                                    {
                                        <div class="d-flex align-items-center text-muted small mb-2">
                                            <i class="bi bi-telephone-fill me-2"></i>
                                            <a href="tel:@company.ContactPhone" class="text-decoration-none text-muted">@company.ContactPhone</a>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(company.ContactEmail))
                                    {
                                        <div class="d-flex align-items-center text-muted small">
                                            <i class="bi bi-envelope-fill me-2"></i>
                                            <a href="mailto:@company.ContactEmail" class="text-decoration-none text-muted">@company.ContactEmail</a>
                                        </div>
                                    }
                                </div>
                                
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <span class="badge bg-light text-dark">
                                        <i class="bi bi-briefcase me-1"></i>@company.VacanciesCount вакансий
                                    </span>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-page="/CompanyManagement/CompanyEdit" asp-route-id="@company.Id" class="btn btn-outline-primary" title="Редактировать">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" title="Удалить" 
                                                data-bs-toggle="modal" data-bs-target="#deleteModal" 
                                                data-id="@company.Id" data-name="@company.Name">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                        <a asp-page="/CompanyManagement/CompanyUsers" asp-route-id="@company.Id" class="btn btn-outline-info" title="Управление пользователями">
                                            <i class="bi bi-people"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Пагинация -->
            @if (Model.TotalPages > 1)
            {
                <nav class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link text-success" asp-page="MyCompanies" asp-route-page="@(Model.CurrentPage - 1)">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                        
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link @(i == Model.CurrentPage ? "bg-success border-success text-white" : "text-success")" 
                                   asp-page="MyCompanies" asp-route-page="@i">@i</a>
                            </li>
                        }
                        
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link text-success" asp-page="MyCompanies" asp-route-page="@(Model.CurrentPage + 1)">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-building display-1 text-muted"></i>
                <h4 class="mt-3">У вас пока нет компаний</h4>
                <p class="text-muted">Создайте свою первую компанию и начинайте публиковать вакансии</p>
                <a asp-page="/CompanyManagement/CompanyEdit" class="btn btn-success btn-lg mt-2">
                    <i class="bi bi-plus-circle me-2"></i>Создать компанию
                </a>
            </div>
        }
    </div>
</section>

<!-- Модальное окно подтверждения удаления -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle me-2"></i>Подтверждение удаления</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Вы действительно хотите удалить компанию <strong id="deleteName"></strong>?</p>
                <p class="text-muted small">Это действие нельзя отменить. Все вакансии этой компании также будут удалены.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Отмена</button>
                <form method="post" asp-page-handler="Delete" id="deleteForm">
                    <input type="hidden" name="id" id="deleteId" value="" />
                    <button type="submit" class="btn btn-danger">Удалить</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Настройка модального окна удаления
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var name = button.getAttribute('data-name');
            
            document.getElementById('deleteId').value = id;
            document.getElementById('deleteName').textContent = name;
        });
    </script>
}