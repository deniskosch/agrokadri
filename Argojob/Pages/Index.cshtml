@page
@model Agrojob.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Основной контент -->
<main>
    <!-- Герой секция -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <span class="seasonal-badge animate-fade-up">
                        <i class="bi bi-calendar-week"></i> Сезонные вакансии уже доступны
                    </span>
                    <h1 class="hero-title animate-fade-up delay-1">
                        Найдите работу в <span class="hero-highlight">АПК</span><br>на сезон или постоянно
                    </h1>
                    <p class="hero-text animate-fade-up delay-1">
                        АгроКарьера — специализированная платформа для поиска вакансий в агропромышленном комплексе.
                        С нами сотрудники находят работу мечты, а компании — лучшие кадры.
                    </p>
                        
                    <!-- Поисковая строка -->
                    <form method="post" asp-page-handler="Search" class="search-wrapper d-flex flex-column flex-md-row animate-fade-up delay-2">
                        <input type="text" class="search-input flex-grow-1" name="searchTerm" value="@Model.SearchTerm" placeholder="Должность, компания или ключевые слова">
                        <button type="submit" class="search-btn">
                            <i class="bi bi-search me-2"></i>Найти вакансии
                        </button>
                    </form>
                        
                    <!-- Быстрые ссылки -->
                    <div class="mt-4 d-flex gap-3 flex-wrap animate-fade-up delay-3">
                        <span class="text-muted">Популярно:</span>
                        <a asp-page="Index" asp-route-filter="сезонные" class="text-decoration-none text-success">Сезонные работы</a>
                        <a href="#" class="text-decoration-none text-success">Вахта</a>
                        <a href="#" class="text-decoration-none text-success">Для студентов</a>
                        <a href="#" class="text-decoration-none text-success">Без опыта</a>
                    </div>
                </div>
                
                <div class="col-lg-6 d-none d-lg-block animate-fade-right">
                    <img src="~/static-images/main-farmer.png" alt="Агро иллюстрация" class="img-fluid" style="max-width: 100%; border-radius: 20px;">
                    </div>
                </div>
            </div>
        </section>

        <!-- Список вакансий -->
        <section class="vacancies-section">
            <div class="container">
                <h2 class="section-title">Актуальные вакансии</h2>
                <p class="section-subtitle">Найдите работу своей мечты в агропромышленном комплексе</p>
        
                <!-- Сетка вакансий -->
                <div class="row g-4">
                    @foreach (var vacancy in Model.DisplayedVacancies)
                    {
                        <div class="col-lg-6">
                            <div class="vacancy-card @(vacancy.IsSeasonal ? "seasonal" : "")">
                                @if (vacancy.IsSeasonal)
                                {
                                    <span class="seasonal-tag">🌾 Сезонная</span>
                                }
                                <span class="company-badge">@vacancy.Location</span>
                                <h3 class="vacancy-title">@vacancy.Title</h3>
                                <div class="company-name">
                                    <i class="bi bi-building"></i>
                                    @vacancy.Company
                                </div>
                                <div class="salary">
                                    @vacancy.Salary <small>на руки</small>
                                </div>
                                <div class="tags">
                                    @foreach (var tag in vacancy.Tags)
                                    {
                                        <span class="tag">@tag</span>
                                    }
                                </div>
                                <div class="posted-date">
                                    <i class="bi bi-clock"></i> Опубликовано: @vacancy.PostedDate
                                </div>
                                <a asp-page="VacancyDetail" asp-route-id="@vacancy.Id" class="btn-details">
                                    Подробнее <i class="bi bi-arrow-right ms-2"></i>
                                </a>
                            </div>
                        </div>
                    }
                </div>
        
                <!-- Кнопка загрузить еще -->
                @if (Model.HasMoreVacancies)
                {
                    <div class="text-center mt-5">
                        <form method="post" asp-page-handler="LoadMore">
                            <input type="hidden" name="currentFilter" value="@Model.CurrentFilter" />
                            <input type="hidden" name="currentVisibleCount" value="@Model.VisibleCount" />
                            <button type="submit" class="btn btn-outline-primary btn-lg px-5">
                                Загрузить еще вакансии
                            </button>
                        </form>
                    </div>
                }
            </div>
        </section>

        <!-- Преимущества платформы -->
        <section class="features-section">
            <div class="container">
                <h2 class="section-title text-center" style="margin-bottom: 60px;">Почему выбирают нас</h2>
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="feature-item">
                            <div class="feature-icon">
                                <i class="bi bi-calendar-check"></i>
                            </div>
                            <h3 class="feature-title">Сезонные вакансии</h3>
                            <p class="feature-text">Большой выбор временной и сезонной работы в сельском хозяйстве. Идеально для студентов и специалистов.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature-item">
                            <div class="feature-icon">
                                <i class="bi bi-building"></i>
                            </div>
                            <h3 class="feature-title">Проверенные компании</h3>
                            <p class="feature-text">Только реальные работодатели с подтвержденными вакансиями в агропромышленном комплексе.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature-item">
                            <div class="feature-icon">
                                <i class="bi bi-lightning-charge"></i>
                            </div>
                            <h3 class="feature-title">Быстрый отклик</h3>
                            <p class="feature-text">Откликайтесь на вакансии в один клик и получайте ответы от работодателей в течение дня.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>