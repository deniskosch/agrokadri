@page "/my-resumes"
@model Agrojob.Pages.ResumeManagement.MyResumesModel
@{
    ViewData["Title"] = "Мои резюме";
}

<!-- Хлебные крошки -->
<div class="bg-light py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-page="/Index" class="text-success">Главная</a></li>
                <li class="breadcrumb-item"><a asp-page="/EmployeeManagementMenu" class="text-success">Панель соискателя</a></li>
                <li class="breadcrumb-item active" aria-current="page">Мои резюме</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Заголовок и кнопка создания -->
<section class="py-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="section-title mb-0">Мои резюме</h1>
            <a asp-page="/ResumeManagement/ResumeEdit" class="btn btn-success">
                <i class="bi bi-plus-circle me-2"></i>Создать резюме
            </a>
        </div>

        <!-- Статистика -->
        <div class="row g-3 mb-4">
            <div class="col-md-4 col-6">
                <div class="card bg-success bg-opacity-10 border-0">
                    <div class="card-body text-center">
                        <h3 class="fw-bold text-success">@Model.TotalCount</h3>
                        <span class="text-muted">Всего резюме</span>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-6">
                <div class="card bg-primary bg-opacity-10 border-0">
                    <div class="card-body text-center">
                        <h3 class="fw-bold text-primary">@Model.ActiveCount</h3>
                        <span class="text-muted">Активные</span>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-6">
                <div class="card bg-info bg-opacity-10 border-0">
                    <div class="card-body text-center">
                        <h3 class="fw-bold text-info">@Model.ApplicationsCount</h3>
                        <span class="text-muted">Откликов</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Список резюме -->
        @if (Model.Resumes.Any())
        {
            <div class="row g-4">
                @foreach (var resume in Model.Resumes)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0 resume-card">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div class="resume-icon bg-light rounded-circle p-3">
                                        <i class="bi bi-file-person fs-2 text-success"></i>
                                    </div>
                                    <div>
                                        @if (resume.IsPublished)
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success me-1" title="Опубликовано">
                                                <i class="bi bi-globe"></i>
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary bg-opacity-10 text-secondary me-1" title="Черновик">
                                                <i class="bi bi-lock"></i>
                                            </span>
                                        }
                                        @if (!resume.IsActive)
                                        {
                                            <span class="badge bg-warning bg-opacity-10 text-warning" title="Неактивно">
                                                <i class="bi bi-eye-slash"></i>
                                            </span>
                                        }
                                    </div>
                                </div>
                                
                                <h5 class="card-title fw-bold mb-1">@resume.Title</h5>
                                <p class="text-muted small mb-2">@resume.FullName</p>
                                
                                <div class="mb-3">
                                    @if (!string.IsNullOrEmpty(resume.DesiredSalary))
                                    {
                                        <div class="d-flex align-items-center text-muted small mb-1">
                                            <i class="bi bi-currency-ruble me-2"></i>
                                            <span>@resume.DesiredSalary</span>
                                        </div>
                                    }
                                    @if (resume.ExperienceYears.HasValue)
                                    {
                                        <div class="d-flex align-items-center text-muted small mb-1">
                                            <i class="bi bi-briefcase me-2"></i>
                                            <span>Опыт: @resume.ExperienceYears лет</span>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(resume.Location))
                                    {
                                        <div class="d-flex align-items-center text-muted small">
                                            <i class="bi bi-geo-alt me-2"></i>
                                            <span>@resume.Location</span>
                                        </div>
                                    }
                                </div>
                                
                                <div class="d-flex flex-wrap gap-1 mb-3">
                                    @if (resume.ReadyToRelocate)
                                    {
                                        <span class="badge bg-light text-dark">Готов к переезду</span>
                                    }
                                    @if (resume.ReadyForBusinessTrips)
                                    {
                                        <span class="badge bg-light text-dark">Готов к командировкам</span>
                                    }
                                </div>
                                
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <small class="text-muted">
                                        <i class="bi bi-clock me-1"></i>@resume.CreatedAt
                                    </small>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-page="/ResumeManagement/ResumeEdit" asp-route-id="@resume.Id" class="btn btn-outline-primary" title="Редактировать">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-page="/ResumeDetails" asp-route-id="@resume.Id" class="btn btn-outline-info" title="Просмотр">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" title="Удалить" 
                                                data-bs-toggle="modal" data-bs-target="#deleteModal" 
                                                data-id="@resume.Id" data-title="@resume.Title">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Пагинация -->
            @if (Model.TotalPages > 1)
            {
                <nav class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link text-success" asp-page="MyResumes" asp-route-page="@(Model.CurrentPage - 1)">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                        
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link @(i == Model.CurrentPage ? "bg-success border-success text-white" : "text-success")" 
                                   asp-page="MyResumes" asp-route-page="@i">@i</a>
                            </li>
                        }
                        
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link text-success" asp-page="MyResumes" asp-route-page="@(Model.CurrentPage + 1)">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-file-person display-1 text-muted"></i>
                <h4 class="mt-3">У вас пока нет резюме</h4>
                <p class="text-muted">Создайте свое первое резюме и начинайте откликаться на вакансии</p>
                <a asp-page="/ResumeManagement/ResumeEdit" class="btn btn-success btn-lg mt-2">
                    <i class="bi bi-plus-circle me-2"></i>Создать резюме
                </a>
            </div>
        }
    </div>
</section>

<!-- Модальное окно подтверждения удаления -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle me-2"></i>Подтверждение удаления</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Вы действительно хотите удалить резюме <strong id="deleteTitle"></strong>?</p>
                <p class="text-muted small">Это действие нельзя отменить. Все связанные отклики также будут удалены.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Отмена</button>
                <form method="post" asp-page-handler="Delete" id="deleteForm">
                    <input type="hidden" name="id" id="deleteId" value="" />
                    <button type="submit" class="btn btn-danger">Удалить</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Настройка модального окна удаления
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var title = button.getAttribute('data-title');
            
            document.getElementById('deleteId').value = id;
            document.getElementById('deleteTitle').textContent = title;
        });
    </script>
}