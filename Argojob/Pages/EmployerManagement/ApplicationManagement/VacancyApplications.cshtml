@page "/vacancy-applications/{vacancyId}"
@using Agrojob.ViewModels
@model Agrojob.Pages.EmployerManagement.ApplicationManagement.VacancyApplicationsModel
@{
    ViewData["Title"] = $"Отклики: {Model.VacancyTitle}";
    
    // Определяем цвета для статусов
    var statusColors = new Dictionary<string, (string bg, string text)>
    {
        ["pending"] = (bg: "rgba(255, 143, 0, 0.1)", text: "#FF8F00"),
        ["viewed"] = (bg: "rgba(23, 162, 184, 0.1)", text: "#17a2b8"),
        ["invited"] = (bg: "rgba(46, 125, 50, 0.1)", text: "#2E7D32"),
        ["accepted"] = (bg: "rgba(27, 94, 32, 0.1)", text: "#1B5E20"),
        ["rejected"] = (bg: "rgba(220, 53, 69, 0.1)", text: "#dc3545"),
        ["withdrawn"] = (bg: "rgba(107, 114, 128, 0.1)", text: "#6B7280"),
    };
}

<!-- Хлебные крошки -->
<div class="bg-light py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a asp-page="/Index" style="color: #2E7D32;">Главная</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-page="/EmployerManagement/EmployerManagementMenu" style="color: #2E7D32;">Панель работодателя</a>
                </li>
                <li class="breadcrumb-item active" style="color: #6B7280;">Отклики</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Заголовок -->
<section class="py-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="section-title mb-1" style="font-size: 1.8rem;">@Model.VacancyTitle</h1>
                <p style="color: #6B7280;">
                    <i class="bi bi-building me-1"></i>@Model.CompanyName
                </p>
            </div>
            <a asp-page="/EmployerManagement/EmployerManagementMenu"
                   class="btn btn-outline-primary btn-sm rounded-pill px-3"
                   style="border-color: #2E7D32; color: #2E7D32;">
                <i class="bi bi-arrow-left me-1"></i>Назад
            </a>
        </div>

        <!-- Фильтры по статусам -->
        <div class="d-flex flex-wrap gap-2 mb-4">
            <a asp-page="VacancyApplications"
                   asp-route-vacancyId="@Model.VacancyId"
                   asp-route-status=""
                   class="filter-chip @(string.IsNullOrEmpty(Model.CurrentStatus) ? "active" : "")">
                Все
            </a>
            @foreach (var status in Model.AvailableStatuses)
            {
                <a asp-page="VacancyApplications"
                       asp-route-vacancyId="@Model.VacancyId"
                       asp-route-status="@status"
                       class="filter-chip @(Model.CurrentStatus == status ? "active" : "")">
                    @status
                </a>
            }
        </div>

        <!-- Список откликов -->
        @if (Model.Applications.Any())
        {
            <div class="card shadow-sm border-0 rounded-4" style="border: 1px solid #E0E8E0 !important;">
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var app in Model.Applications)
                        {
                            var colors = statusColors.GetValueOrDefault(app.Status.ToString().ToLower(),
                                (bg: "rgba(107, 114, 128, 0.1)", text: "#6B7280"));
                            
                            <div class="list-group-item border-0 p-4" style="border-bottom: 1px solid #E0E8E0 !important;">
                                <div class="row align-items-center">
                                    <div class="col-md-5">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle p-2 me-3" style="background-color: rgba(46, 125, 50, 0.1);">
                                                <i class="bi bi-person-circle fs-4" style="color: #2E7D32;"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-semibold mb-1" style="color: #1C2E1C;">@app.ApplicantName</h6>
                                                <div class="d-flex flex-wrap gap-3 small" style="color: #6B7280;">
                                                    <span><i class="bi bi-envelope me-1"></i>@app.ApplicantEmail</span>
                                                    @if (!string.IsNullOrEmpty(app.ApplicantPhone))
                                                    {
                                                        <span><i class="bi bi-telephone me-1"></i>@app.ApplicantPhone</span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-3">
                                        @if (app.ResumeId.HasValue)
                                        {
                                            <a asp-page="/ResumeManagement/ResumeDetail"
                                                   asp-route-id="@app.ResumeId"
                                                   class="text-decoration-none small"
                                                   style="color: #2E7D32;"
                                                   target="_blank">
                                                <i class="bi bi-file-text me-1"></i>@(app.ResumeTitle ?? "Резюме")
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="small" style="color: #6B7280;">
                                                <i class="bi bi-file-text me-1"></i>Без резюме
                                            </span>
                                        }
                                    </div>
                                    
                                    <div class="col-md-2">
                                        <span class="badge py-2 px-3" style="background-color: @colors.bg; color: @colors.text;">
                                            @app.StatusDisplay
                                        </span>
                                    </div>
                                    
                                    <div class="col-md-1 text-end">
                                        <span class="small" style="color: #6B7280;">@app.AppliedAtDisplay</span>
                                    </div>
                                    
                                    <div class="col-md-1 text-end">
                                        <a asp-page="ApplicationDetail"
                                               asp-route-id="@app.Id"
                                               class="btn btn-sm"
                                               style="color: #2E7D32;"
                                               title="Просмотреть отклик">
                                            <i class="bi bi-arrow-right fs-5"></i>
                                        </a>
                                    </div>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(app.CoverLetterPreview))
                                {
                                    <div class="mt-3 pt-2 border-top" style="border-color: #E0E8E0 !important;">
                                        <p class="small mb-0" style="color: #6B7280;">
                                            <i class="bi bi-chat-quote me-1"></i>
                                            @app.CoverLetterPreview
                                        </p>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Пагинация -->
            @if (Model.TotalPages > 1)
            {
                <nav class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link"
                                   asp-page="VacancyApplications"
                                   asp-route-vacancyId="@Model.VacancyId"
                                   asp-route-status="@Model.CurrentStatus"
                                   asp-route-page="@(Model.CurrentPage - 1)"
                                   style="color: #2E7D32; border-color: #E0E8E0;">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                        
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link"
                                       asp-page="VacancyApplications"
                                       asp-route-vacancyId="@Model.VacancyId"
                                       asp-route-status="@Model.CurrentStatus"
                                       asp-route-page="@i"
                                       style="@(i == Model.CurrentPage ? "background-color: #2E7D32; border-color: #2E7D32; color: white;" : "color: #2E7D32; border-color: #E0E8E0;")">
                                    @i
                                </a>
                            </li>
                        }
                        
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link"
                                   asp-page="VacancyApplications"
                                   asp-route-vacancyId="@Model.VacancyId"
                                   asp-route-status="@Model.CurrentStatus"
                                   asp-route-page="@(Model.CurrentPage + 1)"
                                   style="color: #2E7D32; border-color: #E0E8E0;">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox fs-1" style="color: #6B7280; opacity: 0.5;"></i>
                <h5 class="mt-3 fw-semibold" style="color: #1C2E1C;">Нет откликов</h5>
                <p style="color: #6B7280;">На эту вакансию пока никто не откликнулся</p>
            </div>
        }
    </div>
</section>